<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="glide"
            type="com.bumptech.glide.RequestManager" />
        <variable
            name="model"
            type="com.heejae.tenniverse.domain.model.UserModel" />
        <variable
            name="selected"
            type="Boolean" />
        <variable
            name="isRoot"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:background="@{selected == true ? @drawable/ic_border_game_item_clicked : @drawable/ic_border_game_item}">

        <ImageView
            android:id="@+id/iv_tennis_court"
            android:layout_width="40dp"
            android:layout_height="40dp"
            setGlide="@{glide}"
            setUri="@{model.profileUrl}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/style_item_name"
            android:layout_marginStart="8dp"
            android:text="@{model.displayName}"
            tools:text="이준형"
            app:layout_constraintStart_toEndOf="@id/iv_tennis_court"
            app:layout_constraintTop_toTopOf="@id/iv_tennis_court"
            app:layout_constraintBottom_toBottomOf="@id/iv_tennis_court" />

        <TextView
            android:id="@+id/tv_gender"
            style="@style/style_item_gender"
            android:layout_marginStart="10dp"
            android:text="@{context.getString(model.gender.kor)}"
            tools:text="남성"
            app:layout_constraintTop_toTopOf="@id/iv_tennis_court"
            app:layout_constraintBottom_toBottomOf="@id/iv_tennis_court"
            app:layout_constraintStart_toEndOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_root"
            style="@style/style_item_name"
            android:fontFamily="@font/sc_dream_8"
            android:layout_marginStart="8dp"
            android:text="@string/root"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:visibility="@{isRoot == true &amp;&amp; selected == true ? View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toEndOf="@id/tv_gender"
            app:layout_constraintTop_toTopOf="@id/iv_tennis_court"
            app:layout_constraintBottom_toBottomOf="@id/iv_tennis_court" />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_racket"
            app:layout_constraintEnd_toStartOf="@id/tv_phone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2년"
            android:text="@{model.phoneNumber}"
            android:textSize="12sp"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:fontFamily="@font/sc_dream_3"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>