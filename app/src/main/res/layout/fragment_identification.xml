<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="com.heejae.tenniverse.domain.model.CredentialState"/>

        <variable
            name="viewModel"
            type="com.heejae.tenniverse.persentation.main.MainViewModel" />
        <variable
            name="phoneAuthManager"
            type="com.heejae.tenniverse.util.PhoneAuthManager" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        >

        <TextView
            android:id="@+id/tv_des_check_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="28sp"
            android:fontFamily="@font/sc_dream_8"
            tools:text="본인 확인을 위해\n당신의 번호를 알려 주세요!"/>

        <TextView
            android:id="@+id/tv_input_phone"
            style="@style/style_login_input_text"
            android:text="@string/input_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_des_check_user"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_phone"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:boxStrokeColor="@color/text_input_layout_color"
            app:boxBackgroundColor="@color/white"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_phone_send"
            app:layout_constraintTop_toBottomOf="@id/tv_input_phone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/black"
                android:text="@={viewModel.phoneNumber}"
                android:afterTextChanged="@{() -> viewModel.validatePhoneNumber()}"
                android:textColorHint="@color/sub_light_gray"
                android:hint="@string/hint_input_phone"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_phone_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/send_phone_number"
            android:fontFamily="@font/noto_sans_light"
            android:includeFontPadding="false"
            android:textColor="@{viewModel.phoneNumberValidation.booleanValue() ? @color/black: @color/gray}"
            android:enabled="@{viewModel.phoneNumberValidation.booleanValue()}"
            android:backgroundTint="@{viewModel.phoneNumberValidation.booleanValue() ? @color/light_green: @color/light_gray}"
            android:background="@drawable/ic_border_btn"
            android:onClick="@{() -> phoneAuthManager.requestCode()}"
            app:layout_constraintTop_toTopOf="@id/til_phone"
            app:layout_constraintBottom_toBottomOf="@id/til_phone"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_cert"
            style="@style/style_login_input_text"
            android:text="@string/certification_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_phone"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_cert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:enabled="@{viewModel.phoneCodeModel != null ? true: false}"
            app:errorEnabled="true"
            app:helperTextEnabled="true"
            app:hintEnabled="false"
            app:errorTextColor="@color/red"
            app:helperTextTextColor="@color/green"
            app:boxStrokeColor="@color/text_input_layout_color"
            app:boxStrokeErrorColor="@color/border_stroke"
            app:errorIconDrawable="@null"
            app:setUserState="@{viewModel.credentialState}"
            app:setCodeModel="@{viewModel.phoneCodeModel}"
            app:helper="@{@string/success_auth}"
            app:error="@{@string/failure_auth}"
            app:boxBackgroundColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_phone_send"
            app:layout_constraintTop_toBottomOf="@id/tv_cert">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_cert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="number"
                android:maxLength="6"
                android:text="@={viewModel.certificationNumber}"
                android:afterTextChanged="@{() -> viewModel.validateCertificationNumber()}"
                android:textColorHint="@color/sub_light_gray"
                android:hint="@string/hint_certification"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_cert"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:textSize="16sp"
            android:text="@string/certification"
            android:fontFamily="@font/noto_sans_light"
            android:includeFontPadding="false"
            android:textColor="@{viewModel.certificationNumberValidation.booleanValue() ? @color/black: @color/gray}"
            android:enabled="@{viewModel.certificationNumberValidation.booleanValue()}"
            android:backgroundTint="@{viewModel.certificationNumberValidation.booleanValue() ? @color/light_green: @color/light_gray}"
            android:onClick="@{() -> phoneAuthManager.signInWithPhoneAuthCredential()}"
            android:background="@drawable/ic_border_btn"
            app:layout_constraintTop_toTopOf="@id/til_cert"
            app:layout_constraintEnd_toEndOf="parent"/>


        <Button
            android:id="@+id/btn_next"
            style="@style/style_login_next_btn"
            android:enabled="@{viewModel.signInValidation.booleanValue()}"
            android:backgroundTint="@{viewModel.signInValidation.booleanValue() ? @color/green: @color/sub_light_gray}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>