<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.heejae.tenniverse.persentation.main.MainViewModel.Gender"/>
        <variable
            name="viewModel"
            type="com.heejae.tenniverse.persentation.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        >

        <TextView
            android:id="@+id/tv_des_check_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="28sp"
            tools:text="본인 확인을 위해\n당신의 성별을 알려 주세요!"/>

        <View
            android:id="@+id/v_main"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="92dp"
            android:alpha="@{(viewModel.gender == Gender.MAN) ? 1f : 0.5f}"
            android:background="@{(viewModel.gender == Gender.MAN) ? @drawable/ic_circle_selected : @drawable/ic_circle}"
            android:onClick="@{() -> viewModel.chooseGender(Gender.MAN)}"
            app:layout_constraintTop_toBottomOf="@id/tv_des_check_user"
            app:layout_constraintEnd_toStartOf="@id/v_womain"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/iv_man"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_man"
            android:alpha="@{(viewModel.gender == Gender.MAN) ? 1f : 0.5f}"
            app:layout_constraintTop_toTopOf="@id/v_main"
            app:layout_constraintStart_toStartOf="@id/v_main"
            app:layout_constraintEnd_toEndOf="@id/v_main"
            app:layout_constraintBottom_toBottomOf="@id/v_main"/>

        <TextView
            android:id="@+id/tv_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_bold"
            android:includeFontPadding="false"
            android:text="@string/man"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:alpha="@{(viewModel.gender == Gender.MAN) ? 1f : 0.5f}"
            app:layout_constraintTop_toBottomOf="@id/v_main"
            app:layout_constraintStart_toStartOf="@id/v_main"
            app:layout_constraintEnd_toEndOf="@id/v_main"/>

        <View
            android:id="@+id/v_womain"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:alpha="@{(viewModel.gender == Gender.WOMAN) ? 1f : 0.5f}"
            android:background="@{(viewModel.gender == Gender.WOMAN) ? @drawable/ic_circle_selected : @drawable/ic_circle}"
            android:onClick="@{() -> viewModel.chooseGender(Gender.WOMAN)}"
            app:layout_constraintTop_toTopOf="@id/v_main"
            app:layout_constraintStart_toEndOf="@id/v_main"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_woman"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_woman"
            android:alpha="@{(viewModel.gender == Gender.WOMAN) ? 1f : 0.5f}"
            app:layout_constraintTop_toTopOf="@id/v_womain"
            app:layout_constraintStart_toStartOf="@id/v_womain"
            app:layout_constraintEnd_toEndOf="@id/v_womain"
            app:layout_constraintBottom_toBottomOf="@id/v_womain"/>

        <TextView
            android:id="@+id/tv_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_bold"
            android:includeFontPadding="false"
            android:text="@string/woman"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:alpha="@{(viewModel.gender == Gender.WOMAN) ? 1f : 0.5f}"
            app:layout_constraintTop_toBottomOf="@id/v_womain"
            app:layout_constraintStart_toStartOf="@id/v_womain"
            app:layout_constraintEnd_toEndOf="@id/v_womain"/>


        <Button
            android:id="@+id/btn_next"
            style="@style/style_login_next_btn"
            android:enabled="@{viewModel.genderValidation.booleanValue()}"
            android:backgroundTint="@{viewModel.genderValidation.booleanValue() ? @color/green: @color/sub_light_gray}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>