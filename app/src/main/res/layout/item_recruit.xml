<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="17dp"
    android:paddingEnd="17dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="@drawable/ic_border_game_item"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        tools:text="매헌시민의테니스장"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        tools:text="새로운 팀원을 모집합니다."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <ImageView
        android:id="@+id/iv_people"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_people"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_comment"/>

    <TextView
        android:id="@+id/tv_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginStart="4dp"
        tools:text="13명"
        app:layout_constraintStart_toEndOf="@id/iv_people"
        app:layout_constraintTop_toTopOf="@id/iv_people"
        app:layout_constraintBottom_toBottomOf="@id/iv_people"/>

    <ImageView
        android:id="@+id/iv_c"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:paddingStart="5dp"
        android:src="@drawable/ic_c"
        app:layout_constraintStart_toEndOf="@id/tv_people"
        app:layout_constraintTop_toTopOf="@id/tv_people"
        app:layout_constraintBottom_toBottomOf="@id/tv_people"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginStart="4dp"
        tools:text="이준형"
        app:layout_constraintStart_toEndOf="@id/iv_c"
        app:layout_constraintTop_toTopOf="@id/iv_people"
        app:layout_constraintBottom_toBottomOf="@id/iv_people"/>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:src="@drawable/ic_tenniverse_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>