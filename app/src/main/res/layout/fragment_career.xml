<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.heejae.tenniverse.persentation.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        >

        <TextView
            android:id="@+id/tv_des_check_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="28sp"
            tools:text="팀 밸런스 조절을 위해 당신의 테니스 구력을 알려 주세요!"/>

        <TextView
            android:id="@+id/tv_tennis_start"
            style="@style/style_login_input_text"
            android:text="@string/career_text_start"
            android:textSize="24sp"
            android:textColor="@color/black_gray"
            app:layout_constraintTop_toBottomOf="@id/tv_des_check_user"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_career"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/border_stroke"
            android:layout_marginTop="12dp"
            app:boxBackgroundColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tennis_start">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_career"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/sub_light_gray"
                android:textSize="32sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:inputType="number"
                android:text="@={viewModel.career}"
                android:afterTextChanged="@{() -> viewModel.validateCareer()}"
                android:hint="@string/zero"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_tennis_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_bold"
            android:includeFontPadding="false"
            android:text="@string/career_text_end"
            android:layout_marginStart="12dp"
            android:textSize="24sp"
            android:textColor="@color/black_gray"
            app:layout_constraintTop_toTopOf="@id/til_career"
            app:layout_constraintBottom_toBottomOf="@id/til_career"
            app:layout_constraintStart_toEndOf="@id/til_career"/>

        <Button
            android:id="@+id/btn_next"
            style="@style/style_login_next_btn"
            android:enabled="@{viewModel.careerValidation.booleanValue()}"
            android:backgroundTint="@{viewModel.careerValidation.booleanValue() ? @color/green: @color/sub_light_gray}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>