<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.heejae.tenniverse.persentation.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        >

        <TextView
            android:id="@+id/tv_des_check_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="28sp"
            tools:text="본인 확인을 위해\n당신의 성함을 알려 주세요!"/>

        <TextView
            android:id="@+id/tv_input_name"
            style="@style/style_login_input_text"
            android:text="@string/input_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_des_check_user"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_career"
            style="@style/style_input_login_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_input_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@={viewModel.name}"
                android:afterTextChanged="@{() -> viewModel.validateName()}"
                android:textColorHint="@color/sub_light_gray"
                android:hint="@string/hint_input_name"/>

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn_next"
            style="@style/style_login_next_btn"
            android:enabled="@{viewModel.nameValidation.booleanValue()}"
            android:backgroundTint="@{viewModel.nameValidation.booleanValue() ? @color/green: @color/sub_light_gray}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>