<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.heejae.tenniverse.domain.model.RentType"/>
        <import type="android.view.View"/>
        <variable
            name="item"
            type="com.heejae.tenniverse.domain.model.RentModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="17dp"
        android:paddingEnd="17dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/ic_border_game_item">

        <TextView
            android:id="@+id/tv_op1"
            style="@style/style_text"
            android:fontFamily="@font/sc_dream_5"
            tools:text="일일 대관"
            android:text="@{context.getString(item.type.kor)}"
            android:textColor="@color/green"
            android:textSize="10sp"
            android:padding="6dp"
            android:background="@drawable/ic_border_game_type"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_op2"
            style="@style/style_text"
            android:fontFamily="@font/sc_dream_5"
            android:textColor="@color/yellow"
            android:text="@{context.getString(item.gameType.kor)}"
            android:visibility="@{item.type == RentType.EVENT ? View.GONE : View.VISIBLE}"
            tools:text="남성 복식"
            android:textSize="10sp"
            android:padding="6dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/ic_border_game_type"
            app:layout_constraintTop_toTopOf="@id/tv_op1"
            app:layout_constraintStart_toEndOf="@id/tv_op1" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/style_text"
            android:fontFamily="@font/noto_sans_bold"
            android:layout_marginTop="7dp"
            android:text="@{item.location}"
            android:textColor="@color/black"
            tools:text="매헌시민의테니스장"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tv_op1"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_date"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_calendar"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/style_text"
            android:fontFamily="@font/noto_sans_light"
            android:textColor="@color/black_gray"
            android:text="@{@string/dateFormat(item.month, item.day, item.dayOfWeek.title)}"
            tools:text="12월 17일 (토)"
            android:textSize="14sp"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@id/iv_date"
            app:layout_constraintTop_toTopOf="@id/iv_date"
            app:layout_constraintBottom_toBottomOf="@id/iv_date" />

        <ImageView
            android:id="@+id/iv_clock"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="11dp"
            android:src="@drawable/ic_clock"
            app:layout_constraintStart_toEndOf="@id/tv_date"
            app:layout_constraintTop_toTopOf="@id/iv_date"
            app:layout_constraintBottom_toBottomOf="@id/iv_date" />

        <TextView
            android:id="@+id/tv_clock"
            style="@style/style_text"
            android:fontFamily="@font/noto_sans_light"
            android:textColor="@color/black_gray"
            tools:text="오후 6:00 ~ 8:00"
            android:text="@{@string/hourFormat(item.dayTime.title, item.startAt, item.endAt)}"
            android:textSize="14sp"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@id/iv_clock"
            app:layout_constraintTop_toTopOf="@id/iv_clock"
            app:layout_constraintBottom_toBottomOf="@id/iv_clock" />

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_comment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_date"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_comment"
            style="@style/style_text"
            android:fontFamily="@font/noto_sans_light"
            android:textColor="@color/black_gray"
            android:text="@{item.des}"
            tools:text="하루전에 정오까지 대관비를 입금해주세요."
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/iv_comment"
            app:layout_constraintTop_toTopOf="@id/iv_comment"
            app:layout_constraintBottom_toBottomOf="@id/iv_comment" />

        <TextView
            android:id="@+id/tv_person_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{@string/information_people(item.member.size,item.max)}"
            tools:text="6/8명"
            app:layout_constraintTop_toTopOf="@id/tv_op1" />

        <ImageView
            android:id="@+id/iv_tennis_person"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_tennis_person_2"
            app:layout_constraintTop_toTopOf="@id/tv_op1"
            app:layout_constraintEnd_toStartOf="@id/tv_person_status"
            app:layout_constraintBottom_toBottomOf="@id/tv_person_status" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>