<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="glide"
            type="com.bumptech.glide.RequestManager" />
        <variable
            name="model"
            type="com.heejae.tenniverse.domain.model.UserModel" />

        <variable
            name="userType"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:background="@drawable/ic_border_game_item">

        <ImageView
            android:id="@+id/iv_tennis_court"
            android:layout_width="40dp"
            android:layout_height="40dp"
            setGlide="@{glide}"
            setUri="@{model.profileUrl}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/style_item_name"
            android:layout_marginStart="8dp"
            android:text="@{model.displayName}"
            tools:text="이준형"
            app:layout_constraintStart_toEndOf="@id/iv_tennis_court"
            app:layout_constraintTop_toTopOf="@id/iv_tennis_court"
            app:layout_constraintBottom_toBottomOf="@id/iv_tennis_court" />

        <TextView
            android:id="@+id/tv_gender"
            style="@style/style_item_gender"
            android:layout_marginStart="10dp"
            android:text="@{context.getString(model.gender.kor)}"
            tools:text="남성"
            app:layout_constraintTop_toTopOf="@id/iv_tennis_court"
            app:layout_constraintBottom_toBottomOf="@id/iv_tennis_court"
            app:layout_constraintStart_toEndOf="@id/tv_name" />

        <View
            android:id="@+id/anchor_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_user_rate"/>

        <TextView
            android:id="@+id/tv_user_rate"
            style="@style/style_item_rate"
            android:text="@{userType}"
            tools:text="준회원"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>