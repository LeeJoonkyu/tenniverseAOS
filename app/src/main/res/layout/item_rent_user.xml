<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="isRoot"
            type="Boolean" />
        <variable
            name="glide"
            type="com.bumptech.glide.RequestManager" />
        <variable
            name="model"
            type="com.heejae.tenniverse.domain.model.UserRentModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:background="@drawable/ic_border_game_item">

        <ImageView
            android:id="@+id/iv_tennis_court"
            android:layout_width="82dp"
            android:layout_height="82dp"
            setGlide="@{glide}"
            setUri="@{model.profileUrl}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_name"
            style="@style/style_item_name"
            android:layout_marginStart="8dp"
            android:text="@{model.displayName}"
            tools:text="이준형"
            app:layout_constraintStart_toEndOf="@id/iv_tennis_court"
            app:layout_constraintTop_toTopOf="@id/iv_tennis_court" />

        <TextView
            android:id="@+id/tv_gender"
            style="@style/style_item_gender"
            android:layout_marginStart="10dp"
            android:text="@{context.getString(model.gender.kor)}"
            tools:text="남성"
            app:layout_constraintTop_toTopOf="@id/tv_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toEndOf="@id/tv_name" />
        
        <ImageView
            android:id="@+id/ic_delete_user"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_delete_user"
            android:visibility="@{isRoot == true &amp;&amp; model.root == false ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/ic_crown"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_crown"
            android:visibility="@{model.root ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_comment"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_comment"
            style="@style/style_text"
            android:fontFamily="@font/noto_sans_light"
            android:textColor="@color/black_gray"
            android:text="@{model.des}"
            tools:text="하루전에 정오까지 대관비를 입금해주세요."
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/iv_comment"
            app:layout_constraintTop_toTopOf="@id/iv_comment"
            app:layout_constraintBottom_toBottomOf="@id/iv_comment" />

        <ImageView
            android:id="@+id/iv_career"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_racket"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/iv_comment"
            app:layout_constraintTop_toBottomOf="@id/iv_comment" />

        <TextView
            android:id="@+id/tv_career"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1년"
            android:text="@{@string/career_format(model.career)}"
            android:textSize="12sp"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:fontFamily="@font/sc_dream_3"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/iv_career"
            app:layout_constraintStart_toEndOf="@id/iv_career"
            app:layout_constraintBottom_toBottomOf="@id/iv_career"/>

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_phone"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@id/tv_career"
            app:layout_constraintTop_toTopOf="@id/iv_career"
            app:layout_constraintBottom_toBottomOf="@id/iv_career"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="01036153247"
            android:text="@{model.phoneNumber}"
            android:textSize="12sp"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:fontFamily="@font/sc_dream_3"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/iv_phone"
            app:layout_constraintTop_toTopOf="@id/iv_career"
            app:layout_constraintBottom_toBottomOf="@id/iv_career" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>