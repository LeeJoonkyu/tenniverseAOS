<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.heejae.tenniverse.domain.model.RentUserType"/>
        <import type="com.heejae.tenniverse.domain.model.RentType"/>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.heejae.tenniverse.persentation.home.rentdetail.RentDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor">

        <ImageView
            android:id="@+id/iv_back"
            android:backgroundTint="@color/black"
            style="@style/style_back_btn"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"/>

        <TextView
            android:id="@+id/tv_title"
            style="@style/style_top_title"
            android:text="@{viewModel.rentModel.location}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:backgroundTint="@color/black"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:visibility="@{viewModel.userType == RentUserType.ROOT ? View.VISIBLE : View.GONE}"
            android:src="@drawable/ic_delete"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"/>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@id/group_btn"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guide_begin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="17dp" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guide_end"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="16dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_rent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="17dp"
                        android:paddingEnd="17dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:background="@color/white"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_op1"
                            style="@style/style_text_rent_type"
                            tools:text="일일 대관"
                            android:text="@{context.getString(viewModel.rentModel.type.kor)}"
                            android:textColor="@color/green"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tv_op2"
                            style="@style/style_text_rent_type"
                            android:textColor="@color/yellow"
                            android:text="@{context.getString(viewModel.rentModel.gameType.kor)}"
                            tools:text="남성 복식"
                            android:layout_marginStart="6dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/tv_op1" />

                        <TextView
                            android:id="@+id/tv_rent_title"
                            style="@style/style_text"
                            android:fontFamily="@font/noto_sans_bold"
                            android:layout_marginTop="7dp"
                            android:text="@{viewModel.rentModel.location}"
                            android:textColor="@color/black"
                            tools:text="매헌시민의테니스장"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@id/tv_op1"
                            app:layout_constraintStart_toStartOf="parent" />

                        <ImageView
                            android:id="@+id/iv_date"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_calendar"
                            app:layout_constraintTop_toBottomOf="@id/tv_rent_title"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tv_date"
                            style="@style/style_text"
                            android:fontFamily="@font/noto_sans_light"
                            android:textColor="@color/black_gray"
                            android:text="@{@string/dateFormat(viewModel.rentModel.month, viewModel.rentModel.day, viewModel.rentModel.dayOfWeek.title)}"
                            tools:text="12월 17일 (토)"
                            android:textSize="14sp"
                            android:layout_marginStart="2dp"
                            app:layout_constraintStart_toEndOf="@id/iv_date"
                            app:layout_constraintTop_toTopOf="@id/iv_date"
                            app:layout_constraintBottom_toBottomOf="@id/iv_date" />

                        <ImageView
                            android:id="@+id/iv_clock"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="11dp"
                            android:src="@drawable/ic_clock"
                            app:layout_constraintStart_toEndOf="@id/tv_date"
                            app:layout_constraintTop_toTopOf="@id/iv_date"
                            app:layout_constraintBottom_toBottomOf="@id/iv_date" />

                        <TextView
                            android:id="@+id/tv_clock"
                            style="@style/style_text"
                            android:fontFamily="@font/noto_sans_light"
                            android:textColor="@color/black_gray"
                            tools:text="오후 6:00 ~ 8:00"
                            android:text="@{@string/hourFormat(viewModel.rentModel.dayTime.title, viewModel.rentModel.startAt, viewModel.rentModel.endAt)}"
                            android:textSize="14sp"
                            android:layout_marginStart="2dp"
                            app:layout_constraintStart_toEndOf="@id/iv_clock"
                            app:layout_constraintTop_toTopOf="@id/iv_clock"
                            app:layout_constraintBottom_toBottomOf="@id/iv_clock" />

                        <ImageView
                            android:id="@+id/iv_comment"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_comment"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_date"
                            app:layout_constraintBottom_toTopOf="@id/iv_coat" />

                        <TextView
                            android:id="@+id/tv_comment"
                            style="@style/style_text"
                            android:fontFamily="@font/noto_sans_light"
                            android:textColor="@color/black_gray"
                            android:text="@{viewModel.rentModel.des}"
                            tools:text="하루전에 정오까지 대관비를 입금해주세요."
                            android:layout_marginStart="5dp"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@id/iv_comment"
                            app:layout_constraintTop_toTopOf="@id/iv_comment"
                            app:layout_constraintBottom_toBottomOf="@id/iv_comment" />

                        <TextView
                            android:id="@+id/tv_person_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@{@string/information_people(viewModel.members.size(),viewModel.rentModel.max)}"
                            tools:text="6/8명"
                            app:layout_constraintTop_toTopOf="@id/tv_op1" />

                        <ImageView
                            android:id="@+id/iv_tennis_person"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_tennis_person_2"
                            app:layout_constraintTop_toTopOf="@id/tv_op1"
                            app:layout_constraintEnd_toStartOf="@id/tv_person_status"
                            app:layout_constraintBottom_toBottomOf="@id/tv_person_status" />

                        <ImageView
                            android:id="@+id/iv_coat"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_coat"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_comment"
                            app:layout_constraintStart_toStartOf="parent"/>


                        <TextView
                            android:id="@+id/tv_coat_data"
                            style="@style/style_text"
                            android:fontFamily="@font/noto_sans_light"
                            android:textColor="@color/black"
                            android:text="@{@string/coat_data(context.getString(viewModel.rentModel.courtType.kor), viewModel.rentModel.courtCount)}"
                            tools:text="인조잔디 4코트"
                            android:layout_marginStart="5dp"
                            android:textSize="10sp"
                            app:layout_constraintStart_toEndOf="@id/iv_coat"
                            app:layout_constraintTop_toTopOf="@id/iv_coat"
                            app:layout_constraintBottom_toBottomOf="@id/iv_coat"/>

                        <ImageView
                            android:id="@+id/iv_owner"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_crown"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toTopOf="@id/iv_coat"
                            app:layout_constraintBottom_toBottomOf="@id/iv_coat"
                            app:layout_constraintStart_toEndOf="@id/tv_coat_data"/>


                        <TextView
                            android:id="@+id/tv_owner"
                            style="@style/style_text"
                            android:fontFamily="@font/noto_sans_light"
                            android:textColor="@color/black"
                            android:text="@{viewModel.rentModel.ownerName}"
                            tools:text="이준형"
                            android:layout_marginStart="5dp"
                            android:textSize="10sp"
                            app:layout_constraintStart_toEndOf="@id/iv_owner"
                            app:layout_constraintTop_toTopOf="@id/iv_coat"
                            app:layout_constraintBottom_toBottomOf="@id/iv_coat"/>


                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/div_account"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintTop_toBottomOf="@id/iv_coat"
                            app:layout_constraintBottom_toTopOf="@id/tv_account"/>

                        <androidx.constraintlayout.widget.Group
                            android:id="@+id/group_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="@{viewModel.isAccountOpened() == false ? View.GONE: View.VISIBLE}"
                            app:constraint_referenced_ids="tv_account, tv_account_number, tv_copy, iv_copy"/>

                        <TextView
                            android:id="@+id/tv_account"
                            style="@style/style_text"
                            android:fontFamily="@font/sc_dream_3"
                            android:textSize="10sp"
                            android:text="@string/account_number"
                            android:textColor="@color/black_gray"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="30dp"
                            app:layout_constraintBottom_toTopOf="@id/tv_check_account"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/div_account"/>

                        <TextView
                            android:id="@+id/tv_account_number"
                            style="@style/style_text"
                            android:fontFamily="@font/sc_dream_4"
                            android:textSize="13sp"
                            android:text="@{@string/account_format(viewModel.rentModel.bank, viewModel.rentModel.ownerAccount)}"
                            tools:text="328972190"
                            android:textColor="@color/black"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toTopOf="@id/tv_account"
                            app:layout_constraintBottom_toBottomOf="@id/tv_account"
                            app:layout_constraintStart_toEndOf="@id/tv_account"/>

                        <TextView
                            android:id="@+id/tv_copy"
                            style="@style/style_text_clickable"
                            android:fontFamily="@font/sc_dream_3"
                            android:textSize="10sp"
                            android:text="@string/copy"
                            android:textColor="@color/black_gray"
                            android:layout_marginEnd="5dp"
                            app:layout_constraintTop_toTopOf="@id/tv_account"
                            app:layout_constraintBottom_toBottomOf="@id/tv_account"
                            app:layout_constraintEnd_toStartOf="@id/iv_copy"/>

                        <ImageView
                            android:id="@+id/iv_copy"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_copy"
                            app:layout_constraintTop_toTopOf="@id/tv_account"
                            app:layout_constraintBottom_toBottomOf="@id/tv_account"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tv_check_account"
                            style="@style/style_text_clickable"
                            android:fontFamily="@font/sc_dream_3"
                            android:textSize="10sp"
                            android:onClick="@{() -> viewModel.changeAccountOpened()}"
                            android:text="@{viewModel.isAccountOpened() == false ? @string/check_account: @string/closed}"
                            android:textColor="@color/black_gray"
                            tools:text="입금 정보 확인하기"
                            android:layout_marginEnd="5dp"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/iv_check_account"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <ImageView
                            android:id="@+id/iv_check_account"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@{viewModel.isAccountOpened() == false ? @drawable/ic_arrow_drop_down : @drawable/ic_arrow_drop_up}"
                            app:layout_constraintTop_toTopOf="@id/tv_check_account"
                            app:layout_constraintBottom_toBottomOf="@id/tv_check_account"
                            app:layout_constraintStart_toEndOf="@id/tv_check_account"
                            app:layout_constraintEnd_toEndOf="parent"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/ll_member"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@id/guide_begin"
                        app:layout_constraintEnd_toEndOf="@id/guide_end"
                        app:layout_constraintTop_toBottomOf="@id/cl_rent">


                        <TextView
                            android:id="@+id/tv_member_list"
                            style="@style/style_rent_text"
                            android:text="@string/member_list"
                            app:layout_constraintStart_toStartOf="@id/guide_begin"
                            app:layout_constraintTop_toBottomOf="@id/cl_rent" />

                        <TextView
                            android:id="@+id/tv_nothing_member"
                            style="@style/style_text"
                            android:layout_marginTop="34dp"
                            android:text="@string/nothing_member"
                            android:layout_gravity="center"
                            android:fontFamily="@font/noto_sans_bold"
                            android:textColor="@color/sub_light_gray"
                            android:textSize="20sp"
                            android:visibility="@{viewModel.members.size() == 0 ? View.VISIBLE: View.GONE}"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_member_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:visibility="@{viewModel.members.size() == 0 ? View.GONE: View.VISIBLE}"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_waiting"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@id/guide_begin"
                        app:layout_constraintEnd_toEndOf="@id/guide_end"
                        app:layout_constraintTop_toBottomOf="@id/ll_member">

                        <TextView
                            android:id="@+id/tv_wait"
                            style="@style/style_rent_text"
                            android:text="@string/wait_member" />

                        <TextView
                            android:id="@+id/tv_nothing_waiting"
                            style="@style/style_text"
                            android:layout_marginTop="34dp"
                            android:layout_marginBottom="16dp"
                            android:text="@string/nothing_waiting"
                            android:layout_gravity="center"
                            android:fontFamily="@font/noto_sans_bold"
                            android:textColor="@color/sub_light_gray"
                            android:textSize="20sp"
                            android:visibility="@{viewModel.waiting.size() == 0 ? View.VISIBLE: View.GONE}"
                            app:layout_constraintTop_toBottomOf="@id/tv_wait"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_wait_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            android:visibility="@{viewModel.waiting.size() == 0 ? View.GONE: View.VISIBLE}"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintTop_toBottomOf="@id/tv_wait"
                            app:layout_constraintStart_toStartOf="@id/guide_begin"
                            app:layout_constraintEnd_toEndOf="@id/guide_end"/>
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <LinearLayout
            android:id="@+id/group_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btn_part"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:text="@{viewModel.isMember == false ? @string/participate : @string/cancel_participate}"
                android:backgroundTint="@{viewModel.isMember == false ? @color/green: @color/sub_light_gray}"
                android:visibility="@{viewModel.userType == RentUserType.ROOT ? View.VISIBLE : View.GONE}"
                style="@style/style_home_btn"
                android:layout_marginStart="16dp"/>

            <Button
                android:id="@+id/btn_reject"
                android:layout_weight="1"
                android:text="@{viewModel.rentModel.closed ? @string/recruit : @string/cancel_recruit}"
                style="@style/style_home_btn"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@{viewModel.rentModel.closed ? @color/green: @color/sub_light_gray}"
                android:visibility="@{viewModel.userType == RentUserType.ROOT ? View.VISIBLE : View.GONE}"/>

            <Button
                android:id="@+id/btn_standard"
                android:layout_weight="1"
                android:text="@{viewModel.isMember() ? @string/cancel_participate : viewModel.rentModel.closed ? @string/closed_recruit : viewModel.rentModel.type != RentType.WEEKLY ? @string/participate : viewModel.isBeforeTwoWeek() ? @string/participate : @string/before_two_week}"
                style="@style/style_home_btn"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                tools:visibility="gone"
                android:backgroundTint="@{viewModel.isMember() ? @color/sub_light_gray : viewModel.rentModel.closed ? @color/sub_light_gray: viewModel.rentModel.type != RentType.WEEKLY ? @color/green : viewModel.isBeforeTwoWeek()? @color/green : @color/black_gray}"
                android:visibility="@{viewModel.userType != RentUserType.ROOT ? View.VISIBLE : View.GONE}"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>